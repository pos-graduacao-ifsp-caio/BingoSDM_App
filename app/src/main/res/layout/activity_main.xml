<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/bingo_sdm"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn_sortear_bola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sortear Bola" />

    <TextView
        android:id="@+id/txtView_letra_coluna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/coluna"
        android:textSize="40sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgView_letra_coluna"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtView_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/numero"
        android:textSize="40sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgView_nro_bola"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_novo_sorteio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Iniciar Novo Sorteio"
        android:visibility="gone" />

</LinearLayout>